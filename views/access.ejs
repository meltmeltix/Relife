<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/css/tailwind.css">
    <link rel="stylesheet" type="text/css" href="/css/toastify.css">
    <link rel="icon" href="/favicon/favicon.ico">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png">
    <title><%- title -%></title>
    <script type="module">
        import { showToast } from '/js/utils/toast.js';

        const toastMessage = <%- JSON.stringify(message || '') %>;
        const toastType = <%- typeof messageType !== 'undefined' ? JSON.stringify(messageType) : 'null' %>;

        if (toastMessage != null) showToast(toastMessage, toastType);
    </script>
    <script defer type="module" src="/js/utils/toast.js"></script>
</head>

<body class="flex flex-col h-viewport items-center justify-center bg-base-300">
    <svg class="z-0 absolute h-full w-full opacity-10 dark:opacity-20" xmlns="http://www.w3.org/2000/svg">
        <defs>
            <pattern id="graphic" width="600" height="600" viewBox="0 0 600 600" patternUnits="userSpaceOnUse">
                <image href="/svg/topography.svg"></image>
            </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#graphic)"></rect>
    </svg>

    <div class="w-full sm:w-96 sm:rounded-3xl bg-base-100 z-10">
        <% if (accessType === "LOGIN") { %>
            <%- include('partials/login') -%>
        <% } else if (accessType === "SIGNUP") { %>
            <%- include('partials/signup') -%>
        <% } %>
    </div>
</body>

</html>