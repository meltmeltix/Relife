<div class="tw-flex tw-flex-col tw-gap-3">
    <h1 class="tw-font-serif tw-font-semibold tw-text-2xl tw-pb-3">Log in to Relife</h1>

    <input type="text" name="username" placeholder="Mail or username" class="tw-dy-input tw-dy-input-bordered tw-w-full" required autofocus/>
    <input type="password" name="password" placeholder="Password" class="tw-dy-input tw-dy-input-bordered tw-w-full" required/>
    
    <% if (message != null) { %>
        <div role="alert" class="tw-dy-alert tw-dy-alert-error">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                class="tw-h-6 tw-w-6 tw-shrink-0 tw-stroke-current">
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span><%- message -%></span>
        </div>
    <% } %>

    <a class="tw-dy-link tw-dy-link-hover tw-dy-link-accent">Forgot your password?</a>
    <p class="tw-inline">Need an account? <a href="/a/signup" class="tw-inline-block tw-dy-link tw-dy-link-hover tw-dy-link-accent">Sign up</a></p>
</div>